{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "WebAPI.Services": "Information"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": false,
        "IncludeScopes": true,
        "TimestampFormat": "yyyy-MM-ddTHH:mm:ss.fffZ ",
        "UseUtcTimestamp": true
      }
    },
    "Email": {
      "WaitIntervalBeforeSend": "00:10:00",
      "MaxWaitTimeBeforeSend": "01:00:00",
      "CheckInterval": "00:01:00",
      "IsEnabled": false,
      "AdminEmailReceiver": "admin@yourdomain.com",
      "MinimumLogLevelToSend": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DataStorage": "Data Source=/app/data/ravuno.db"
  },
  "FetchAndSendSettings": {
    // defines the interval at which the fetcher services run
    "FetchInterval": "1.00:00:00",
    // defines how often a detailed fetch is performed (e.g., every 7th fetch)
    // On startup, the first fetch is always detailed.
    // Set this setting to 0 to disable detailed fetch entirely.
    "FetchDetailedEvery": 7
  },
  "CleanupSettings": {
    "CleanUpInterval": "12:00:00",
    "HistoricRetentionTimeSpan": "30.00:00:00"
  },
  "FetcherSettings": {
    "Tekna": {
        "IsEnabled": true,
      "CoursesApiUrl": "https://www.tekna.no/api/typeahead/lists?q=course:format=full:pageSize=100:refiner=regiondigital!oslo,searchtargetgroup!tv,fieldsofstudy,pricegroup,language:insession=false,start:pagenumber={0}"
    },
    "DntActivities": {
      "IsEnabled": true,
      "ActivitiesApiUrl": "https://www.dnt.no/api/activities?pageSize=100&page={0}",
      "EventDetailApiUrl": "https://p-lrapapi-weu-app.app.p.letsreg.com/api/v1/events/{0}"
    }
  },
  "EmailSettings": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "your-email@gmail.com",
    "SmtpPassword": "your-password",
    "FromEmail": "noreply@yourdomain.com",
    "FromName": "Your App Name",
    "EnableSsl": true
  }
}