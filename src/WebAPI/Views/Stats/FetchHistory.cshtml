@model List<Ravuno.DataStorage.Models.FetchHistory>
@{
    ViewData["Title"] = "Fetch History";
    Layout = "_Layout";
}

<h2>Fetch History</h2>

<div class="info">
    <strong>Total Records:</strong> @ViewBag.TotalCount | 
    <strong>Page:</strong> @ViewBag.CurrentPage of @ViewBag.TotalPages
</div>

@if (Model.Count == 0)
{
    <p>No fetch history records found.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Source</th>
                <th>Is Detailed</th>
                <th>Execution Start Time</th>
                <th>Duration</th>
                <th>Items Retrieved</th>
                <th>New Items</th>
                <th>Updated Items</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Source</td>
                    <td>@(item.IsDetailed ? "Yes" : "No")</td>
                    <td>@item.ExecutionStartTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>@item.ExecutionDuration.ToString(@"hh\:mm\:ss")</td>
                    <td>@item.ItemsRetrieved</td>
                    <td>@item.NewItems</td>
                    <td>@item.UpdatedItems</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="pagination">
        @if (ViewBag.CurrentPage > 1)
        {
            <a href="/stats/fetchhistory?page=1&pageSize=@ViewBag.PageSize">&laquo; First</a>
            <a href="/stats/fetchhistory?page=@(ViewBag.CurrentPage - 1)&pageSize=@ViewBag.PageSize">&lt; Previous</a>
        }
        
        @for (int i = Math.Max(1, ViewBag.CurrentPage - 5); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 5); i++)
        {
            if (i == ViewBag.CurrentPage)
            {
                <span class="current">@i</span>
            }
            else
            {
                <a href="/stats/fetchhistory?page=@i&pageSize=@ViewBag.PageSize">@i</a>
            }
        }
        
        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <a href="/stats/fetchhistory?page=@(ViewBag.CurrentPage + 1)&pageSize=@ViewBag.PageSize">Next &gt;</a>
            <a href="/stats/fetchhistory?page=@ViewBag.TotalPages&pageSize=@ViewBag.PageSize">Last &raquo;</a>
        }
    </div>
}
