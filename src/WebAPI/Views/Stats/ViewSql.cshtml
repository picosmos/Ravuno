@{
    ViewData["Title"] = "SQL Query - " + ViewBag.QueryTitle;
    Layout = "_Layout";
}

<h2>SQL Query Configuration</h2>

<div class="info">
    <strong>Query Title:</strong> @ViewBag.QueryTitle<br />
    <strong>Email Receiver:</strong> @ViewBag.EmailReceiver
</div>

<h2>SQL Query</h2>

<pre>@ViewBag.SqlQuery</pre>

<p>
    <a href="/stats/viewsqlresults?queryTitle=@Uri.EscapeDataString(ViewBag.QueryTitle)" style="display: inline-block; padding: 8px 16px; background-color: #000080; color: #fff; text-decoration: none; border: 2px outset #fff; margin-right: 10px;">Execute Query</a>
    <a href="/stats/sendupdatehistory">&laquo; Back to Send Update History</a> |
    <a href="/">Home</a>
</p>
